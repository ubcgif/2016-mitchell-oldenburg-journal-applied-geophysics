issn = {09269851},
journal = {Journal of Applied Geophysics},
keywords = {Geoelectrics,Mining,Resistivity,Rock salt,Waste disposal},
pages = {181--196},
title = {{Geoelectric exploration and monitoring in rock salt for the safety assessment of underground waste disposal sites}},
