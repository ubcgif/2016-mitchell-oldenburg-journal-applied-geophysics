doi = {10.1190/GEO2012-0088.1},
file = {:C$\backslash$:/Users/micmitch/Dropbox/My Documents/UBC/Research/References/Thesis/Deceuster{\_}etal{\_}2013.pdf:pdf},
issn = {0016-8033},
journal = {Geophysics},
number = {2},
pages = {E79--E94},
title = {{Automated identification of changes in electrode contact properties for long-term permanent ERT monitoring experiments}},
